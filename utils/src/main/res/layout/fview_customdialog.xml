<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/layout_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/fbg_customdialog_style"
        android:minHeight="140dp"
        android:minWidth="300dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_message"
                style="@style/text_16_666666"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:lineSpacingMultiplier="1.5"
                android:minHeight="50dp"
                tools:text="提示信息在这里" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_double_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_negative"
                    style="@style/text_15_ffffff_sdw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fbtn_bg_dddddd_style"
                    android:gravity="center"
                    android:textColor="@color/color_black" />

                <android.support.v4.widget.Space
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn_positive"
                    style="@style/text_15_666666_sdw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fbtn_bg_3f8ee9_style"
                    android:gravity="center"
                    android:textColor="@color/color_white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_btn_single"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_single"
                    style="@style/text_15_ffffff_sdw"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/fbtn_bg_3f8ee9_style"
                    android:gravity="center"
                    android:minWidth="80dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>